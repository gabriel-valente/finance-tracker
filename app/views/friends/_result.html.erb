<div class="results-block">
  <%= render "shared/messages" %>
</div>

<% if !!@users %>
  <div class="card p-0 mb-3 col-9">
    <% @users.each do |user| %>
      <div class="card card-header rounded results-block">
        <div class="row pl-2 pr-2">
          <div class="col-auto p-0 mt-auto mb-auto">
            <strong>Name: </strong> <%= user.full_name %>
            <strong>Email: </strong> <%= user.email %>
          </div>
          <div class="col-auto p-0 ml-auto">
            <%= link_to "View Profile", "#", class: "btn btn-success ml-auto" %>
            <% if current_user.not_friends_with?(user.id) %>
              <%= link_to "Follow Friend", friendships_path(friend: user.id), method: :post, class: "btn btn-success ml-auto" %>
            <% else %>
              <%= link_to "Unfollow Friend", friendship_path(user), method: :delete, class: "btn btn-warning ml-auto" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>