<div class="results-block">
  <%= render "shared/messages" %>
</div>

<% if @stock %>
  <div class="card card-header results-block mb-3">
    <strong>Symbol: </strong> <%= @stock.ticker%>
    <strong>Name: </strong> <%= @stock.name%>
    <strong>Price: </strong> <%= @stock.last_price%>
    <% if !current_user.stocks.find_by(ticker: @stock.ticker) %>
      <%= link_to "Add to Portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), method: :post, class: "btn btn-success" %>
    <% else %>
      <%# <%= link_to "Add to Portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), method: :post, class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>