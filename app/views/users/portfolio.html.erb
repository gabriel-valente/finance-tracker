<h1>Portfolio</h1>
<div class="search-area">  
  <div class="row col-10 pr-0">
    <h3 class="col-auto">Search Stocks</h3>
    <%= link_to "Refresh Prices", refresh_prices_path, class: "btn btn-success col-auto ml-auto" %>
  </div>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 pr-0">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 pl-0">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

<div id="results"></div>
<%= render "stocks/list" %>